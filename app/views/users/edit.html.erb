<h3>ユーザー編集</h3>

 <%= form_with model: @user do |f| %>
   <table>
     <tr>
        <th><%= f.label :user_icon,"アイコン画像" %></th>
        <td>
         <%= f.file_field :User_icon, accept: 'image/*', onchange: 'previewImage(preview)' %>
        <%= f.hidden_field :User_icon_cache %>
        </td>
     </tr>
     <tr>
       <th><%= f.label :name ,"名前" %></th>
       <td><%= f.text_field :name %></td>
     </tr>
     <tr>
       <th><%= f.label :profile ,"自己紹介" %></th>
       <td><%= f.text_area :profile %></td>
     </tr>
   </table>

   <div>
     <ul>
       <li><%= f.submit "編集を完了する" %></li>
     </ul>
   </div>
 <% end %>