<h2>検索結果：<%= @rooms.count %>件</h2>
  <div class="box">
    <%= form_with url: search_rooms_path, local: true, method: :get, class: "search-form" do |f| %>
      <%= f.search_field :keyword, placeholder: "エリア名を入力", class: "search-input-i" %>
      <%= f.search_field :keyword, placeholder: "キーワード名を入力", class: "search-input-b" %>
      <%= f.submit "検索", class: "search-btn-i" %>
    <% end %>
  </div>

  <tbody>
    <ul class="roomlist">
    <% if @rooms.count > 0 %>
      <% @rooms.each do |room| %>
          <li class="roomlist-list">
            <div class="room_image">
              <% if room.room_image?%>
                <p><%= image_tag room.room_image.url, class: "icon", style: "width: 300px; height: 200px; object-fit:cover;" %></p>
              <% else %>
                <p><%= image_tag 'https://rails-02-sample.herokuapp.com/assets/room/default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png',class: "icon", style: "width: 300px; height: 200px; object-fit:cover;" %></p>
              <% end %>
            </div>
            <div class="roomlist-list">
              <p class><%= room.room_name %></p>
              <p class="roomlist-list-in"><%= room.introduction %></p>
              <p class><%= room.price.to_s(:delimited) %></p>
              <p class><%= room.address %></p>
              <p><%= link_to "詳細はこちら", room_path(room), class: "roomlist-link" %></p>
            </div>
          </li>
      <% end %>
    <% else %>
      <td colspan="9">現在登録している施設はありません</td>
    <% end %>
    </ul>  
  </tbody>